{
  "name": "geoguesser",
  "version": "1.0.0",
  "scripts": {
    "start": "concurrently --kill-others-on-fail \"npm run client\" \"npm run server\"",
    "client": "cd client && npm start",
    "server": "nodemon server.js"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "nodemon": "^1.19.3",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
